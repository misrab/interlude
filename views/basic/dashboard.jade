extends ../shared/generic_layout

block javascripts
	script(type='text/javascript', src='/javascripts/basic/dashboard.js')
	script(type='text/javascript', src='/socket.io/socket.io.js')

block stylesheets
	link(rel='stylesheet', href='/stylesheets/basic/dashboard.css')

block content
	include ../shared/navbar_partial
	
	input(type='hidden', id='activeUrl', value='#{urls.length ? urls[0] : ""}')
	
	
	.row.medium_space_top.bottom
		.col-sm-3.text-right
			.font1-5 Your URLs:
		.col-sm-9
			- for (var i=0; i<urls.length; i++)
				if i==0
					.url.active #{urls[i]}
				else
					.url #{urls[i]}
					
	.row.medium_space_top.bottom
		.col-sm-3.text-right
			.font1-5 Live Chat:
			
		.col-sm-9
			#liveChat
			
			if userPlan!='0'
				textarea#liveWrite(placeholder='Respond here with priority...')