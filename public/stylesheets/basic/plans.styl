@import "nib"
@import "../variables"


.greyCover
	position absolute
	width 100%
	height 100%
	opacity 0.7
	background-color white
	z-index 4444

.plan
	position relative
	border 1px solid grey
	
	.planTitle
		color #21ABCD
		background-color #F0FFFF
		font-size 2em
		padding 10px 0
	
	.planFeatures
		background-color #89CFF0
		font-size 1.25em
		padding 10px 0
		
.plan.active
	.planTitle
		background-color #90EE90