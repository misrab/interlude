/*
 *	Index styles to be served to publisher
 */


/* Important: to overwrite bootstrap's box-sizing */
#interlude-chatBox-container > *
	box-sizing border-box

#interlude-chatBox-container
	z-index 9999
	height 260px
	width 400px
	position fixed !important // jquery may try to mess with this
	left 0
	bottom -233px
	
	.ui-resizable-se
		visibility hidden
	
	textarea
		resize none
#interlude-chatBox-close
	float right
	margin-right 10px
#interlude-chatBox-close:hover
	color red
#interlude-chatBox-tabTop
	position relative
	width 100%
	height 10%
	padding 2px 0
	text-align center
	opacity 0.7
	cursor pointer
	background-color #C9FFE5
	border 1px solid black
	border-top-left-radius 6px
	border-top-right-radius 6px
#interlude-chatBox-logistics
	text-align center
	padding 5px
	border-left 1px solid black
	border-right 1px solid black
	width 100%
	height 10%
	background-color lightgrey
#interlude-chatBox-read
	overflow scroll
	background-color white
	padding 10px
	padding-bottom 0
	position relative
	width 100%
	height 70%
	border 1px solid black
	border-bottom none
#interlude-chatBox-write
	padding 0 10px
	position relative
	width 100%
	height 10%
	border 1px solid green