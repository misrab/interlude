/*
 *	Index styles to be served to publisher
 */

/* Important: to overwrite bootstrap's box-sizing */
#interlude-chatBox-container > *
	box-sizing border-box

#interlude-chatBox-container
	height 260px
	width 400px
	border 1px dashed black
	position fixed
	left 0
	bottom -230px
#interlude-chatBox-close
	float right
	margin-right 10px
#interlude-chatBox-close:hover
	color red
#interlude-chatBox-tabTop
	position relative
	width 100%
	height 10%
	padding 2px 0
	text-align center
	opacity 0.7
	cursor pointer
	background-color #C9FFE5
	border-top 1px solid black
	border-left 1px solid black
	border-right 1px solid black
	border-top-left-radius 6px
	border-top-right-radius 6px
#interlude-chatBox-read
	background-color white
	padding 10px
	position relative
	width 100%
	height 80%
	border 1px solid black
#interlude-chatBox-write
	padding 0 10px
	position relative
	width 100%
	height 10%
	border 1px solid green